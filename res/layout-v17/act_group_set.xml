<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@id/actionBar"
        layout="@layout/view_actionbar" />

    <LinearLayout
        android:id="@id/activity_group_set_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip">

        <RelativeLayout
            android:id="@id/invite_friends"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip">

            <TextView
                android:id="@id/invite_friends_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="邀请好友"
                android:textColor="@color/main_black"
                android:textSize="17.0dip" />

            <ImageView
                android:id="@id/next_invite_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/list_next" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/main_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/panel_placed_at_the_top"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:visibility="gone">

            <TextView
                android:id="@id/panel_placed_at_the_top_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="小组置顶"
                android:textColor="@color/main_black"
                android:textSize="17.0dip" />

            <ToggleButton
                android:id="@id/panel_placed_at_the_top_tb"
                android:layout_width="60.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_btn"
                android:checked="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/main_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/group_of_the_message_to_accept"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip">

            <TextView
                android:id="@id/group_of_the_message_to_accept_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="群消息接受"
                android:textColor="@color/main_black"
                android:textSize="17.0dip" />

            <ToggleButton
                android:id="@id/accept_msg"
                android:layout_width="60.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_btn"
                android:checked="true"
                android:enabled="false"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@id/to_report"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:id="@id/to_report_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="举报"
            android:textColor="@color/main_black"
            android:textSize="17.0dip" />

        <ImageView
            android:id="@id/next_to_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_next" />
    </RelativeLayout>

    <Button
        android:id="@id/exit_group"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/account_login_screen_btn"
        android:text="退出群组"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_action_bar_content_inset_material" />
</LinearLayout>