<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="10.0dip"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:id="@id/account_login_screen_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/return_to_login_interface" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/phone_and_email"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@id/et_username"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="手机号/邮箱"
            android:textColor="@color/main_black"
            android:textColorHint="@color/input_hint_gray"
            android:textSize="@dimen/abc_action_bar_content_inset_material" />

        <ImageView
            android:id="@id/iv_clear_phone_register"
            style="@style/item_input_clear"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/et_password_re"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/edt_all_background"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@id/et_password"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/main_black"
            android:textColorHint="@color/input_hint_gray"
            android:textSize="@dimen/abc_action_bar_content_inset_material" />

        <ImageView
            android:id="@id/iv_clear_psw_register"
            style="@style/item_input_clear"
            android:contentDescription="@null"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/account_login_screen_btn"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_action_bar_content_inset_material" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_marginTop="15.0dip">

        <TextView
            android:id="@id/tv_regin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:layout_toLeftOf="@id/imageView5"
            android:layout_toStartOf="@id/imageView5"
            android:text="注册绿科邦"
            android:textColor="@color/actionbar_background" />

        <ImageView
            android:id="@id/imageView5"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white" />

        <TextView
            android:id="@id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:layout_toEndOf="@id/imageView5"
            android:layout_toRightOf="@id/imageView5"
            android:text="忘记密码"
            android:textColor="@color/main_black" />
    </RelativeLayout>
</LinearLayout>