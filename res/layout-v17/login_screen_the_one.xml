<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="420.0dip">

        <ImageView
            android:layout_width="225.0dip"
            android:layout_height="100.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70.0dip"
            android:background="@drawable/login_slogan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/main_container_he"
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:layout_above="@id/registered"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40.0dip"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <ImageView
                android:id="@id/login_screen_user"
                android:layout_width="75.0dip"
                android:layout_height="75.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/login_btn_account_res" />

            <ImageView
                android:id="@id/login_screen_qq"
                android:layout_width="75.0dip"
                android:layout_height="75.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/login_btn_qq_res" />

            <ImageView
                android:id="@id/login_screen_weibo"
                android:layout_width="75.0dip"
                android:layout_height="75.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/login_btn_weibo_res" />

            <ImageView
                android:id="@id/login_screen_wechat"
                android:layout_width="75.0dip"
                android:layout_height="75.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/login_btn_wechat_res" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/have_a_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="23.0dip"
                android:layout_marginRight="23.0dip"
                android:layout_toLeftOf="@id/imageView4"
                android:layout_toStartOf="@id/imageView4"
                android:text="@string/have_a_look"
                android:textColor="@color/textview_color"
                android:visibility="gone" />

            <ImageView
                android:id="@id/imageView4"
                android:layout_width="1.0px"
                android:layout_height="20.0dip"
                android:layout_alignBottom="@id/have_a_look"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20.0dip"
            android:text="@string/registered"
            android:textColor="@color/textview_color" />
    </RelativeLayout>
</RelativeLayout>