<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@color/white"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <com.greentechplace.lvkebangapp.ui.widget.CircleImageView
            android:id="@id/civ_group_avatar"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/rgistration_guide_touxiang"
            app:border_color="@color/ui_dialog_list_text"
            app:border_width="2.0dip" />

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip"
            android:layout_toEndOf="@id/civ_group_avatar"
            android:layout_toRightOf="@id/civ_group_avatar"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="@color/main_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@id/iv_group_info"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@id/iv_group_chat"
            android:layout_toStartOf="@id/iv_group_chat"
            android:background="@drawable/btn_group_border"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="10.0dip"
            android:text="查看"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/iv_group_chat"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_group_border"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="10.0dip"
            android:text="群聊"
            android:textColor="@color/black" />
    </RelativeLayout>

    <FrameLayout
        android:id="@id/fl_fragment_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15.0dip"
        android:background="@color/white" />
</LinearLayout>