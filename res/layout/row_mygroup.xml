<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/contact_listitem" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/space_10" android:paddingRight="@dimen/space_10" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:paddingTop="@dimen/space_11" android:paddingBottom="@dimen/space_11" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@id/avatar" android:layout_width="@dimen/size_avatar" android:layout_height="@dimen/size_avatar" android:layout_marginRight="@dimen/space_10" />
            <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/avatar" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/normal_text_size" android:textColor="@color/main_black" android:id="@id/name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" android:maxLines="1" />
            </RelativeLayout>
        </RelativeLayout>
        <View android:background="@drawable/list_divider" android:layout_width="fill_parent" android:layout_height="@dimen/space_1" />
    </LinearLayout>
</RelativeLayout>